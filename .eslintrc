{
  "plugins": [
    "react",
    "babel",
    "html"
    ],
  "parserOptions": {
    "sourceType":"module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "classes": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "rules": {
    "quotes": 0,
    "no-trailing-spaces": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "one-var": [0, "never"],
    "no-fallthrough": 0,
    "semi": ["error", "never"]
  }
}
